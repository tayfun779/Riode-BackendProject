@model List<Service>

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Services</h4>
                    <a asp-action="Create" class="btn btn-primary">Create</a>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var service in Model)
                                {
                                    <tr>
                                        <td>
                                            <i class="@service.Icon"></i>
                                        </td>
                                        <td>@service.Name</td>
                                        <td>@service.Description</td>
                                        <td>
                                            <a class="btn btn-warning" asp-action="Update" asp-route-id="@service.Id">Update</a>
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@service.Id">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

