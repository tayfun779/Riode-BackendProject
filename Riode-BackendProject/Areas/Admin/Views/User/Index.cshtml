@model List<UserGetViewModel>

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Users</h4>
                    <a asp-action="Create" class="btn btn-primary">Create</a>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Username</th>
                                    <th>Fullname</th>
                                    <th>Email</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var User in Model)
                                {
                                    <tr>

                                        <td>@User.UserName</td>
                                        <td>@User.Fullname</td>
                                        <td>@User.Email</td>
                                        <td>@User.Role</td>
                                        <td>
                                            <a class="btn btn-warning" asp-action="ChangeRole" asp-route-id="@User.Id">Change Role</a>
                                            @{
                                                if (User.IsActive)
                                                {
                                                    <a class="btn btn-success " asp-action="ChangeStatus" asp-route-id="@User.Id">Active</a>

                                                }
                                                else
                                                {
                                                    
                                                    <a class="btn btn-danger " asp-action="ChangeStatus" asp-route-id="@User.Id">Deactive</a>
                                                }
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
