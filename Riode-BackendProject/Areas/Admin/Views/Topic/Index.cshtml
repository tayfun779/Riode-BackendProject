@using Riode_BackendProject.Models

@model List<Topic>

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Topics</h4>
                    <a asp-action="Create" class="btn btn-primary">Create</a>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var Topic in Model)
                                {
                                    <tr>

                                        <td>@Topic.Name</td>
                                        <td>
                                            <a class="btn btn-warning" asp-action="Update" asp-route-id="@Topic.Id">Update</a>
                                            <a class="btn btn-danger deleteBtn" asp-action="Delete" asp-route-id="@Topic.Id">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
